{
  "extends": ["standard"],
  "globals": {
    "jest": true,
    "expect": true,
    "describe": true,
    "test": true,
    "afterEach": true,
    "beforeEach": true
  },
  "rules": {
    "no-tabs": 0,
    "indent": ["error", "tab", {
      "SwitchCase": 1
    }],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "object-curly-spacing": ["error", "always"],
    "jsx-quotes": ["error", "prefer-single"],
    "eol-last": ["error", "always"]
  }
}